<mvc:View xmlns:core="sap.ui.core"
	controllerName="zjblessons.Worklist.controller.Object"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">

	<Page
		showFooter="false"
	>
		<customHeader>
			<Bar
				design="Auto"
			>
				<contentLeft>
					<Title
						text="{DocumentNumber}"
					/>
				</contentLeft>
				<contentRight>
					<Button
						icon="sap-icon://edit"
						text="Edit"
						width="auto"
						press="onEdit"
						visible="{= !${objectView>/isEditMode}}"
					/>
					<Button
						icon="sap-icon://delete"
						text="Delete"
						width="auto"
						press="onDelete"
						visible="{= ${objectView>/isDeletable}}"
					/>
					<Button
						icon="sap-icon://save"
						text="Save"
						width="auto"
						press="onSave"
						visible="{objectView>/isEditMode}"
					/>
					<Button
						icon="sap-icon://sys-cancel"
						text="Cancel"
						width="auto"
						press="onCancel"
						visible="{objectView>/isEditMode}"
					/>
				</contentRight>
			</Bar>
		</customHeader>
		<content>
			<IconTabBar
				expandable="false"
				headerMode="Inline"
				select="onIconTabBarSelect"
				selectedKey="{= ${objectView/>sSelectedTab}}"

			>
				<items>
					<IconTabFilter 
						icon="sap-icon://list"
						key="List"
						text="List"
						visible="{= !${objectView>/isEditMode}}"
					>
						<List
							backgroundDesign="Solid"
							visible="{= !${objectView>/isEditMode} }"
						>
							<items>
								 <ObjectListItem>
                                <attributes>
									<ObjectAttribute title="Document number" text="{DocumentNumber}" />
									<ObjectAttribute title="Region" text="{RegionText}" />
                                    <ObjectAttribute title="Plant" text="{PlantText}" />
                                    <ObjectAttribute title="Description" text="{Description}" />
                                </attributes>
                            </ObjectListItem>
							</items>
						</List>
						<VBox visible="{= ${objectView>/isEditMode} }">
							<Label text="Document Number" />
							<Input value="{DocumentNumber}" placeholder="Enter document number" width="50%" />

							<Label text="Description" />
							<Input value="{Description}" placeholder="Enter description" width="50%" />

							<Label text="Region" />
							<Select selectedKey="{RegionText}" width="50%">
								<core:Item key="{RegionId}" text="{RegionName}" />
							</Select>
							
							<Label text="Plant" />
							<ComboBox selectedKey="{PlantText}" placeholder="Select plant" width="50%">
								<core:Item key="{PlantId}" text="{PlantName}" />
							</ComboBox>
						</VBox>
					</IconTabFilter>
					<IconTabFilter 
						icon="sap-icon://form"
						key="Form"
						text="Form"
						visible="{= !${objectView>/isEditMode}}"
					>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
	</Page>

</mvc:View>