<mvc:View
	controllerName="zjblessons.Worklist.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">

	<Page
		showHeader="true">

		<customHeader>
			<Bar>
				<contentLeft>
					<Title text="Worklist"/>
				</contentLeft>
			</Bar>
		</customHeader>

		<content>
			<IconTabHeader
				select="onIconTabHeaderSelect"
			>
				<items>
					<IconTabFilter key="All" text="All"/>
                    <IconTabFilter key="Deactivated" text="Deactivated"/>
				</items>
			</IconTabHeader>
			<Table 
				id="table"
				width="auto"

    			itemPress="onItemSelect"
				
				growing="true"
				growingThreshold="15"
				growingScrollToLoad="true">

				<headerToolbar>
					<Toolbar>
						<Title id="tableHeader" text="({= ${worklistView>/sCount}})"/>
						<SearchField
							id="searchField"
							tooltip="{i18n>worklistSearchTooltip}"
							placeholder="Document number"
							search="onSearch"
							change="onSearchDocNum"
							liveChange="onLiveSearchDocNum"
							width="auto">
						</SearchField>
						<SearchField
							id="searchField2"
							tooltip="{i18n>worklistSearchTooltip}"
							placeholder="Plant text"
							search="onSearch"
							change="onSearchPlantTxt"
							liveChange="onLiveSearchPlantTxt"
							width="auto">
						</SearchField>
						<DateRangeSelection
							id="dateRange"
							value="{
								path: 'worklistView>/dateRange',
								type: 'sap.ui.model.type.DateInterval',
								formatOptions: {
									pattern: 'yyyy-MM-dd'
								}
							}"
							change="onDateRangeSearch"
							width="auto" />
						<ToolbarSpacer />
						<Button
							icon='sap-icon://add'
							type="Emphasized"
							press="onPressCreate"
						/>
						<Button
							icon='sap-icon://refresh'
							type="Transparent"
							press="onPressRefresh"
							/>
					</Toolbar>
				</headerToolbar>

				<columns>
					<Column id="DocumentNumber">
						<Text text="{i18n>worklistTableDocumentNumber}"/>
					</Column>
					<Column id="DocumentDate">
						<Text text="{i18n>worklistTableDocumentDate}"/>
					</Column>
					<Column id="PlantText">
						<Text text="{i18n>worklistTablePlantText}"/>
					</Column>
					<Column id="RegionText">
						<Text text="{i18n>worklistTableRegionText}"/>
					</Column>
					<Column id="Descripton">
						<Text text="{i18n>worklistTableDescription}"/>
					</Column>
					<Column id="Created">
						<Text text="{i18n>worklistTableCreated}"/>
					</Column>
					<Column id="switchActivation" width="5%">
						<Text text=" "/>
					</Column>
					<Column id="btnDelete" width="3%">
						<Text text=" "/>
					</Column>
				</columns>
			</Table>
		</content>
	</Page>

</mvc:View>