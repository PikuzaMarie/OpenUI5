<mvc:View
	controllerName="zjblessons.Worklist.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
			<Title text="{i18n>worklistTitle}" />
		</semantic:titleHeading>

		<semantic:content>
			<Table
				id="table"
				width="auto"
				noDataText="{worklistView>/tableNoDataText}"
				busyIndicatorDelay="{worklistView>/tableBusyDelay}"
				growing="true"
				growingThreshold="15"
				growingScrollToLoad="true"
				updateFinished="onUpdateFinished">

				<headerToolbar>
					<Toolbar>
						<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
						<ToolbarSpacer />
						<SearchField
							id="searchField"
							tooltip="{i18n>worklistSearchTooltip}"
							placeholder="Document number"
							search="onSearch"
							change="onSearchDocNum"
							liveChange="onLiveSearchDocNum"
							width="auto">
						</SearchField>
						<SearchField
							id="searchField2"
							tooltip="{i18n>worklistSearchTooltip}"
							placeholder="Plant text"
							search="onSearch"
							change="onSearchPlantTxt"
							liveChange="onLiveSearchPlantTxt"
							width="auto">
						</SearchField>
					</Toolbar>
				</headerToolbar>

				<columns>
					<Column id="DocumentNumber">
						<Text text="{i18n>worklistTableDocumentNumber}"/>
					</Column>
					<Column id="DocumentDate">
						<Text text="{i18n>worklistTableDocumentDate}"/>
					</Column>
					<Column id="PlantText">
						<Text text="{i18n>worklistTablePlantText}"/>
					</Column>
					<Column id="RegionText">
						<Text text="{i18n>worklistTableRegionText}"/>
					</Column>
					<Column id="Descripton">
						<Text text="{i18n>worklistTableDescription}"/>
					</Column>
					<Column id="Created">
						<Text text="{i18n>worklistTableCreated}"/>
					</Column>
				</columns>
			</Table>
		</semantic:content>
	</semantic:SemanticPage>

</mvc:View>