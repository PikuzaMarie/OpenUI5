<mvc:View
	controllerName="zjblessons.Worklist.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
			<Title text="{i18n>worklistTitle}" />
		</semantic:titleHeading>

		<semantic:content>
			<Table
				id="table"
				width="auto"
				items="{
					path: '/zjblessons_base_Headers',
					sorter: {
						path: 'DocumentDate',
						descending: true
					}
				}"
				noDataText="{worklistView>/tableNoDataText}"
				busyIndicatorDelay="{worklistView>/tableBusyDelay}"
				growing="true"
				growingScrollToLoad="true"
				updateFinished="onUpdateFinished">

				<headerToolbar>
					<Toolbar>
						<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
						<ToolbarSpacer />
						<SearchField
							id="searchField"
							tooltip="{i18n>worklistSearchTooltip}"
							search="onSearch"
							width="auto">
						</SearchField>
					</Toolbar>
				</headerToolbar>

				<columns>
					<Column id="DocumentNumber">
						<Text text="{i18n>worklistTableDocumentNumber}"/>
					</Column>
					<Column id="DocumentDate">
						<Text text="{i18n>worklistTableDocumentDate}"/>
					</Column>
					<Column id="PlantText">
						<Text text="{i18n>worklistTablePlantText}"/>
					</Column>
					<Column id="RegionText">
						<Text text="{i18n>worklistTableRegionText}"/>
					</Column>
					<Column id="Descripton">
						<Text text="{i18n>worklistTableDescription}"/>
					</Column>
					<Column id="Created">
						<Text text="{i18n>worklistTableCreated}"/>
					</Column>
				</columns>

				<items>
					<ColumnListItem
						type="Navigation"
						press="onPress">
						<cells>
							<ObjectIdentifier
								title="{DocumentNumber}"/>
							<ObjectIdentifier
								title="{
									path: 'DocumentDate',
									type: 'sap.ui.model.type.DateTime',
									formatOptions: {
										style: 'short'
									}
								}"/>
							<ObjectIdentifier
								title="{PlantText}"/>
							<ObjectIdentifier
								title="{RegionText}"/>
							<ObjectIdentifier
								title="{Descripton}"/>
							<ObjectIdentifier
								title="{
									path: 'Created',
									type: 'sap.ui.model.type.DateTime',
									formatOptions: {
										pattern: 'HH:mm dd/MM/yyyy'
									}
								}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>
	</semantic:SemanticPage>

</mvc:View>