<mvc:View xmlns:core="sap.ui.core"
	controllerName="zjblessons.Worklist.controller.Object"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form">

	<Page
		showFooter="false"
	>
		<customHeader>
			<Bar
				design="Auto"
			>
				<contentLeft>
					<Button
						icon="sap-icon://nav-back"
						width="auto"
						press="onPressNavBack"
					/>
					<Title
						text="{DocumentNumber}"
					/>
				</contentLeft>
				<contentRight>
					<Button
						icon="sap-icon://edit"
						text="Edit"
						width="auto"
						press="onEdit"
						visible="{= !${objectView>/isEditMode}}"
					/>
					<Button
						icon="sap-icon://delete"
						text="Delete"
						width="auto"
						press="onDelete"
						visible="{= ${objectView>/isDeletable}}"
					/>
					<Button
						icon="sap-icon://save"
						text="Save"
						width="auto"
						press="onSave"
						visible="{objectView>/isEditMode}"
					/>
					<Button
						icon="sap-icon://sys-cancel"
						text="Cancel"
						width="auto"
						press="onCancel"
						visible="{objectView>/isEditMode}"
					/>
				</contentRight>
			</Bar>
		</customHeader>
		<content>
			<IconTabBar
				expandable="false"
				headerMode="Inline"
				select="onIconTabBarSelect"
				selectedKey="{= ${objectView/>sSelectedTab}}"

			>
				<items>
					<IconTabFilter 
						icon="sap-icon://list"
						key="List"
						text="List"
						visible="{= !${objectView>/isEditMode}}"
					>
						<List
							backgroundDesign="Solid"
							visible="{= !${objectView>/isEditMode} }"
						>
							<items>
								 <ObjectListItem>
                                <attributes>
									<ObjectAttribute title="Document number" text="{DocumentNumber}" />
									<ObjectAttribute title="Region" text="{RegionText}" />
                                    <ObjectAttribute title="Plant" text="{PlantText}" />
                                    <ObjectAttribute title="Description" text="{Description}" />
                                </attributes>
                            </ObjectListItem>
							</items>
						</List>
						<VBox visible="{= ${objectView>/isEditMode} }">
							<Label text="Document Number" />
							<Input value="{DocumentNumber}" placeholder="Enter document number" width="50%" />

							<Label text="Region" />
							<mvc:XMLView viewName="zjblessons.Worklist.view.fragment.template.RegionSelect" />
							
							<Label text="Plant" />
							<core:Fragment fragmentName="zjblessons.Worklist.view.fragment.PlantComboBox" type="XML"></core:Fragment>

							<Label text="Description" />
							<TextArea value="{Description}" rows="3" maxLength="256" placeholder="Enter description" width="50%" />
						</VBox>
					</IconTabFilter>
					<IconTabFilter 
						icon="sap-icon://form"
						key="Form"
						text="Form"
						visible="{= !${objectView>/isEditMode}}"
					>
						<VBox
						>
							<f:Form
								id="idForm"
								editable="true"
							>
								<f:title>
									<core:Title text="Address"/>
								</f:title>
								<f:layout>
									<f:ResponsiveGridLayout
										adjustLabelSpan="false"
										columnsXL="2"
										columnsL="2"
										columnsM="1"
										emptySpanL="4"
										emptySpanM="0"
										emptySpanS="0"
										emptySpanXL="0"
										labelSpanL="3"
										labelSpanM="4"
										labelSpanS="12"
										labelSpanXL="4"
										singleContainerFullSize="false"
									>
									</f:ResponsiveGridLayout>
								</f:layout>
								<f:formContainers>
									<f:FormContainer
										title="Main"
									>
										<f:formElements>
											<f:FormElement
												label="DocumentNumber"
											>
												<Text text="{DocumentNumber}"/>
											</f:FormElement>
											<f:FormElement
												label="Plant Text"
											>
												<Text text="{PlantText}"/>
											</f:FormElement>
											<f:FormElement
												label="Region Text"
											>
												<Text text="{RegionText}"/>
											</f:FormElement>
											<f:FormElement
												label="Description"
											>
												<Text text="{Description}"/>
											</f:FormElement>
										</f:formElements>
									</f:FormContainer>
									<f:FormContainer
										title="Details"
									>
										<f:formElements>
											<f:FormElement
												label="Created"
											>
												<f:fields>
													<Text
														text="{ 
															path: 'Created',
															type: 'sap.ui.model.type.Date',
															formatOptions: {
																style: 'short'
															}
														}"
													/>
												</f:fields>
											</f:FormElement>
											<f:FormElement
												label="Created by full name"
											>
												<f:fields>
													<Text
														text="{CreatedByFullName}"
													/>
												</f:fields>
											</f:FormElement>
											<f:FormElement
												label="Modified"
											>
												<f:fields>
													<Text
														text="{
															path: 'Modified',
															formatter: '.formatter.formatMediumDate'
														}"
													/>
												</f:fields>
											</f:FormElement>
											<f:FormElement
												label="Modified by full name"
											>
												<f:fields>
													<Text
														text="{ModifiedByFullName}"
													/>
												</f:fields>
											</f:FormElement>
										</f:formElements>
									</f:FormContainer>
								</f:formContainers>
							</f:Form>
						</VBox>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
	</Page>

</mvc:View>